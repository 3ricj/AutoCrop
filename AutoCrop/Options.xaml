<ResourceDictionary
    x:Class="Autocrop.Options"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  This data template will be displayed in N.I.N.A. on the options->plugin tab with the datacontext of the TestPlugin instance  -->
    <!--  In order for this datatemplate to be picked correctly, the key has to follow the naming convention of <IPlugin.Name>_Options -->
    <!--  Furthermore the Resource Dictionary has to be exported via code behind export attributes  -->
    <DataTemplate x:Key="AutoCrop_Options">
        <StackPanel Orientation="Vertical">
            <StackPanel Margin="0,0,0,5" Orientation="Horizontal">
                <TextBlock Width="135"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Center">
                    <TextBlock.Text>Crop Percentage:</TextBlock.Text>
                    <TextBlock.ToolTip>This is the percentage (values: 0 to 1) of the image we want to crop. 0.1 = the cropped image contains 10 percent of the original pixels.  Setting this value to zero disables AutoCrop.</TextBlock.ToolTip>
                </TextBlock>
                <TextBox MinWidth="50" Margin="35,0,0,0" VerticalAlignment="Center" Text="{Binding CropPercentage}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>